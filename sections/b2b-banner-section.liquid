{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  } 
{% endstyle %}

<section id="portal-section" class="section-{{ section.id }}-padding">
<div class="portal-wrapper --{{ section.settings.desktop_content_position }} {{ section.settings.color_scheme }}">
       {% for block in section.blocks %}
         {% if block.type == 'image' %}
           <div class="image-block">
             <a href="{{ block.settings.image_link | escape }}">
             <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.alt_text | escape }}">
             </a>
           </div>
         {% endif %}
          <h2 class="heading {{ block.settings.heading_size }}">
                {{ block.settings.heading }}
          </h2>
       {% endfor %}
</div>
</section>


{% schema %}
  {
    "name": "B2B portal",
    "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Position"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "All colors",
      "default": "scheme-1"
    }
    ],
    "blocks": [
      {
      "type": "heading",
      "name": "Heading",
      "limit": 3,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "default",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Medium"
            },
            {
              "value": "h1",
              "label": "Large"
            },
            {
              "value": "h0",
              "label": "Extralarge"
            },
            {
              "value": "hxl",
              "label": "Extra extra large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    },
      {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text"
        }
      ]
    },
      
    ],
   "presets": [
     {
       "name": "B2B portal"
     }
   ] 
  }
{% endschema %}