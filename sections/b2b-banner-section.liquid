{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  } 
  
 .portal-wrapper {
  position: relative;
  background-size: cover;
  background-position: center;
  color: white;
  /* text-align: center; */
  display: flex;
  /* align-items: center; */
  /* justify-content: center; */
  height: 400px; /* Adjust height as needed */
}

.portal-heading {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  padding-left: 20px;
  /* text-align: left;  */
}

.portal-wrapper::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5); /* Adjust overlay color and opacity */
  z-index: 1;
}

{% endstyle %}

<section id="portal-section" class="section-{{ section.id }}-padding">
  
<div class="portal-wrapper --"{{ section.settings.desktop_content_position }} {{ section.settings.color_scheme }}" style="background-image: url({{ section.settings.banner_image | image_url }}); padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
<div class="portal-heading " style="text-align: {{ section.settings.text_align }};">
    <{{ section.settings.heading_size }} style="color: white;" class=>{{ section.settings.heading }}</{{ section.settings.heading_size }}>
</div>
</div>

</section>




{% schema %}
  {
    "name": "B2B portal",
    "settings": [
      {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Upload Image"
      },
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Position"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "All colors",
      "default": "scheme-1"
    },
      {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },  
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "default",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Medium"
            },
            {
              "value": "h1",
              "label": "Large"
            },
            {
              "value": "h0",
              "label": "Extralarge"
            },
            {
              "value": "hxl",
              "label": "Extra extra large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        },
      ],
   "presets": [
     {
       "name": "B2B portal"
     }
   ] 
  }
{% endschema %}