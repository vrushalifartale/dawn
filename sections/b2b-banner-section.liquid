{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  } 
{% endstyle %}

<section id="portal-section" class="section-{{ section.id }}-padding">
<div class="portal-wrapper --{{ section.settings.desktop_content_position }} {{ section.settings.color_scheme }}">
       {% for block in section.blocks %}
         {% if block.type == 'image' %}
           <div class="image-block">
             <a href="{{ block.settings.image_link | escape }}">
             <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.alt_text | escape }}">
             </a>
           </div>
         {% endif %}
          <h2 class="heading {{ block.settings.heading_size }}">
                {{ block.settings.heading }}
          </h2>
       {% endfor %}
</div>
</section>


