            {
              "value": "h0",
              "label": "Extralarge"
            },
            {
              "value": "hxl",
              "label": "Extra extra large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        },
      ]
    },
     { 
        "type": "caption",
        "name": "Caption",
        "settings": [
          {
          "type": "text",
          "id": "caption",
          "default": "caption default",
          "label": "Caption"
        },
