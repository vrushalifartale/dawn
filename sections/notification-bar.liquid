{{ 'section-notification-bar.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section id="notification">
 <div class="section-{{ section.id }}-padding">
   <div class="notification content-container color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
     <div class="notification__wrapper --{{ section.settings.desktop_content_position }}">
       <div class="notification__blocks">
         
        {% for block in section.blocks %}
              <h2 class="heading {{ block.settings.heading_size }}">
                {{ block.settings.heading }}
              </h2>
            
              <p class="subheading {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}">
                {{ block.settings.subheading | escape }}
              </p>
            
              <div class="description">
                {{ block.settings.description }}
              </div>
            
              <div class="notification__button">
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}>
                    {{ block.settings.button_label }}
                  </a>
                {%- endif -%}
              </div>
        {% endfor %}
         
      </div>
       </div>
   </div>
 </div>
</section> 


{% schema %}
{
  "name": "Notification",
  "class": "notification",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Position"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "All colors",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding heading"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto rotate",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 3,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "default",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Medium"
            },
            {
              "value": "h1",
              "label": "Large"
            },
            {
              "value": "h0",
              "label": "Extralarge"
            },
            {
              "value": "hxl",
              "label": "Extra extra large"
            }
          ],
          "default": "h2",
          "label": "Heading size"
        }
      ]
    },
    {
      "type": "subheading",
      "name": "Subheading",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "subheading",
          "default": "Add a tag",
          "label": "Subheading"
        },
        {
          "type": "select",
          "id": "text_style",
          "options": [
            {
              "value": "subtitle",
              "label": "Subtitle"
            },
            {
              "value": "letter spacing",
              "label": "Letter spacing"
            }
          ],
          "default": "letter spacing",
          "label": "Text style"
        },
        {
          "type": "select",
          "id": "text_size",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ],
          "default": "medium",
          "label": "Text size"
        }
      ]
    },
    {
      "type": "text",
      "name": "Description",
      "limit": 3,
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "default": "<p>hghghjdf</p>",
          "label": "Description",
        }
      ]
    },
   {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button 1",
          "label": "Button label",
          "info": "Leave the label blank to hide the button."
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
        
      ]
    }
  ],
  "presets": [
    {
      "name": "Notification"
    }
  ]
}
{% endschema %}
