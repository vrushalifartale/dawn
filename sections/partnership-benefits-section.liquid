.benefits-heading {
  color: black; /* Adjust color as needed */
  text-align: left; /* Or left/right based on section settings */
  margin-bottom: 20px;
  width: Fixed 1200px;
  height: 62px;
  gap: 30px;
  opacity: 0px;
}



.benefits-description {
  max-width: 200px; /* Adjust as needed */
}
  
.benefits-description {
  max-width: 200px; /* Adjust as needed */
}
{%- endstyle -%}

<section id="benefits-section section-{{ section.id }}-padding">
 <div class="partnership-benefit">
        <div class="benefits-wrapper color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
         {% if section.settings.heading != blank %}
         <{{ section.settings.heading_size }} class="benefits-heading">{{ section.settings.heading }}</{{ section.settings.heading_size }}> {% endif %}
         </div>
         <div class= "benefits-block">  
         <ul class="benefits-list">
           {%  for block in section.blocks %}
           <li class="benefits-item">
            {% if block.settings.logo_with_text %} 
            {{ block.settings.logo_with_text | image_url: width:80, height:80 | image_tag: class: 'logo' }}
             {% endif %}
           </li>
             {% endfor %}
         </ul>
         </div>
         {% if section.settings.description != blank %}
         <p class="benefits-description">{{ section.settings.description }}</p>
           {% endif %}
   </div>
</section>





{% schema %}
{
  "name": "Benefits",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Position"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "All colors",
      "default": "scheme-1"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>description</p>",
      "label": "Description"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "default",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h1",
          "label": "Large"
        },
        {
          "value": "h0",
          "label": "Extralarge"
        },
        {
          "value": "hxl",
          "label": "Extra extra large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    }   
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Benefits Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_with_text",
          "label": "Logo with text"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Benefits"
    }
  ]
}
{% endschema %}
