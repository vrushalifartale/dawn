{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

.benefits-section{
 width: 1,200px;
 height: 459px;
 gap: 30px;
 opacity: 0px; 
} 
  
.benefits-wrapper {
  width: 1,200px;
  height: 273px;
  gap: 40px;
  opacity: 0px;
}
  
.benefits-heading {
  color: black; /* Adjust color as needed */
  text-align: left; /* Or left/right based on section settings */
  margin-bottom: 20px;
  width: Fixed 1200px;
  height: 62px;
  gap: 30px;
  opacity: 0px;

}

.benefits-list {
  display: flex;
  flex-wrap: wrap; /* Allows items to wrap if there's not enough space */
  justify-content: flex-start; /* Adjust alignment as needed: center, flex-start, flex-end, space-between */
  gap: 20px; /* Adjust gap between items */
  list-style-type: none; /* Remove default list styles */
  padding: 0;
  margin: 0;
}

.benefits-item {
  display: flex;
  flex-direction: column; /* Stack the logo and description vertically */
  align-items: center; /* Center items horizontally */
  text-align: center; /* Center text inside the item */
}

.benefits-item .logo_with_text {
  margin-bottom: 10px; /* Adjust space between logo and description */
}

.benefits-description {
  max-width: 200px; /* Adjust as needed */
}
  
.benefits-description {
  max-width: 200px; /* Adjust as needed */
}
{%- endstyle -%}

<section id="benefits-section">
 <div class="section-{{ section.id }}-padding">
   <div class="benefits-wrapper color-{{ section.settings.color_scheme }} position-{{ section.settings.desktop_content_position }} section-{{ section.id }}-padding">
         {% if section.settings.heading != blank %}
         <{{ section.settings.heading_size }} class="benefits-heading">{{ section.settings.heading }}</{{ section.settings.heading_size }}> {% endif %}
         <hr>
         <ul class="benefits-list">
           {%  for block in section.blocks %}
           <li class="benefits-item">
            {% if block.settings.logo_with_text %} 
            {{ block.settings.logo_with_text | image_url: width:80, height:80 | image_tag: class: 'logo' }}
             {% endif %}
           </li>
             {% endfor %}
         </ul>
         <hr>
          <hr>
         {% if section.settings.description != blank %}
          <p class="benefits-description">{{ section.settings.description }}</p>
           {% endif %}
          <hr>
   </div>
 </div>
</section>





{% schema %}
{
  "name": "Benefits",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Position"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "All colors",
      "default": "scheme-1"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>description</p>",
      "label": "Description"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "default",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h1",
          "label": "Large"
        },
        {
          "value": "h0",
          "label": "Extralarge"
        },
        {
          "value": "hxl",
          "label": "Extra extra large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    }   
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Benefits Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_with_text",
          "label": "Logo with text"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Benefits"
    }
  ]
}
{% endschema %}
