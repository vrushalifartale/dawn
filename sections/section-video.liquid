{% style %}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* General styling */
.video-wrapper {
  display: flex;
  justify-content: center; /* Default to center */
  padding: 16px;
  width: 100%;
}

.video-container {
  max-width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-block video {
  width: 100%;
  height: auto;
}

/* Center alignment */
.section-center .video-wrapper {
  justify-content: center;
}

/* Left alignment */
.section-left .video-wrapper {
  justify-content: flex-start;
}

/* Right alignment */
.section-right .video-wrapper {
  justify-content: flex-end;
}

  
{% endstyle %}  

<section id="video-section">
  <div class="video-wrapper section-{{ section.id }} {{ section.settings.desktop_content_position }}">
   <div class="video-container">
         {% for block in section.blocks %}

          <h2 class="heading {{ block.settings.heading_size }}">
                {{ block.settings.heading }}
          </h2>

         {% if block.type == 'video_url' %}
           <div class="video-block">
             <video controls>
             <source src="{{ block.settings.video_url }}" type="video/mp4">
               Your browser does not support the video tag.
          </video>
           </div>
         {% endif %}
       {% endfor %}
     </div>
   </div>
</section>




{% schema %}
  {
    "name": "Videosection",
    "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
      {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    },
      {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Position"
    },
      {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "All colors",
      "default": "scheme-1"
    },    
    ],
    "blocks": [
      {
        "type": "heading",
      "name": "Heading",
      "limit": 3,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "default",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Medium"
            },
            {
              "value": "h1",
              "label": "Large"
            },
            {
              "value": "h0",
              "label": "Extralarge"
            },
            {
              "value": "hxl",
              "label": "Extra extra large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
      },
      {    
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "A Shopify-hosted video"
        },
        {
          "type": "video_url",
          "id": "video_url",
          "label": "Upload video",
          "accept": ["youtube", "vimeo"]
      
         },
      ]
    },     
    ],
     "presets":[
       {
       "name": "Videosection"
       }
     ]
  }
  
{% endschema %}