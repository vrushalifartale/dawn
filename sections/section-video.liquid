{% style %}
.section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

/* General styling */
.video-wrapper {
  display: flex;
  justify-content: center; /* Default to center */
  padding: 16px;
  width: 100%;
}

.video-container {
  max-width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-block video {
  width: 100%;
  height: auto;
}

/* Center alignment */
.section-center .video-wrapper {
  justify-content: center;
}

/* Left alignment */
.section-left .video-wrapper {
  justify-content: flex-start;
}

/* Right alignment */
.section-right .video-wrapper {
  justify-content: flex-end;
}
{% endstyle %}

<section id="video-section" class="section-{{ section.id }}-padding">
  {% for block in section.blocks %}
  <div class="video-wrapper section-{{ section.id }} {{ section.settings.desktop_content_position }}">
    <div class="video-container">
        {% if block.type == 'heading' %}
          <h2 class="heading {{ block.settings.heading_size }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}
        </div>
        <div class="">
        {% if block.type == 'image' %}
          <div class="image-block">
            <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.alt_text | escape }}">
          </div>
        {% endif %}
        {% if block.type == 'video' %}
          <div class="video-block">
            <video controls>
              {{ block.settings.video }}
              {{ media | video_tag: autoplay: true, loop: true, muted: true, controls: true }}
              Your browser does not support the video tag.
            </video>
          </div>
        {% endif %}  
    </div>
  </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Video Section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Position"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "All colors",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Default Heading",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Medium"
            },
            {
              "value": "h1",
              "label": "Large"
            },
            {
              "value": "h0",
              "label": "Extralarge"
            },
            {
              "value": "hxl",
              "label": "Extra extra large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text"
        }
      ]
    },
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Upload your video here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "heading",
          "settings": {
            "heading": "Sample Heading",
            "heading_size": "h1"
          }
        },
        {
          "type": "image",
          "settings": {
            "image": "",
            "alt_text": "Sample Image"
          }
        },
      ]
    }
  ]
}
{% endschema %}
