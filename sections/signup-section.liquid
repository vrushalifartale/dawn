{% schema %}
  {
    "name": "Signup",
    "settings": [
      {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Sign Up",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Submit",
      "label": "Button Text"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Sign up to receive the latest updates and offers.",
      "label": "Description"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
    ],
    "presets": [
      {
        "name": "Signup"
      }
    ]
  }
{% endschema %}