{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .explore-wrapper {
    display: grid;
    justify-content: center;
    align-items: center;
    flex-direction: column; /* This ensures that elements are stacked vertically */
    text-align: center; /* Center text horizontally */
    height: 100%; /* Ensure it takes full height if needed */
    width: 100%;
    row-gap: 10px; 
  }

  .snippet {
    margin-bottom: 4px; /* Decreased gap between snippet and richtext */
  }
  
  .richtext{
    font-size:56px;
  }
  
{%- endstyle -%}  

<section id="custom-section">
<div class="section-{{ section.id }}-padding">
<div class="explore-wrapper"> 
  <div class="snippet">{% render 'star.liquid' %}</div>
<div class="richtext">{{ section.settings.title }}</div>

</div>
</div>  
</section>



{% schema %}
  {
    "name": "Star section",
    "disabled_on": {
    "groups": ["header", "footer"]
  },
    "settings": [
     {
      "type": "richtext",
      "id": "title",
      "label": "Title"
      },
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 52
    }    
      
    ],
    "presets": [
      {
        "name": "Star Section"
      }
    ]
  }
{% endschema %}